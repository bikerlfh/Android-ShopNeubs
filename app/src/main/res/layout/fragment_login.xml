<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.com.neubs.shopneubs.fragments.LoginFragment">

    <ProgressBar
        android:id="@+id/login_fragment_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/login_fragment_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_fragment"
            android:background="@drawable/border"
            android:elevation="3dp"
            android:orientation="vertical"
            android:padding="@dimen/padding_fragment"
            android:weightSum="1">


            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_botton_img_logo"
                android:layout_marginTop="@dimen/margin_top_img_logo"
                android:layout_weight="0.15"
                android:background="@drawable/logo_login_200x38" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txt_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:hint="@string/prompt_username"
                    android:inputType="none|textCapWords"
                    android:textColor="@color/colorPrimary"
                    android:textColorLink="@color/colorPrimary"
                    android:textSize="@dimen/text_size_imput" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txt_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="3dp"
                    android:hint="@string/prompt_password"
                    android:inputType="textPassword"
                    android:textColorLink="@color/colorPrimary"
                    android:textSize="@dimen/text_size_imput" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/lbl_forgot_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:background="?attr/selectableItemBackground"
                android:text="Forgot password?"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_forgot_passwrod" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_top_btn"
                android:backgroundTint="@color/colorSecundary"
                android:elevation="8dp"
                android:text="@string/title_login"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_button" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
