<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_marca_filtro"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_cardview_marca_filtro"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_realtiveLayout_cardview_marca_filtro">

        <co.com.neubs.shopneubs.controls.ImageLoaderView
            android:id="@+id/img_marca_cardview_marca_filtro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="false"
            android:layout_marginTop="@dimen/margin_top_img_marca_cardview_marca_filtro"
            />

        <TextView
            android:id="@+id/lbl_marca_cardview_marca_filtro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/img_marca_cardview_marca_filtro"
            android:layout_marginTop="@dimen/margin_top_lbl_marca_cardview_marca_filtro"
            android:text="ASUS"
            android:textAlignment="center"
            android:textColor="@color/textColorSecundary" />
    </RelativeLayout>

</android.support.v7.widget.CardView>