<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:cardElevation="4dp">

    <ImageView
        android:id="@+id/img_cart_vacio"
        android:layout_width="214dp"
        android:layout_height="88dp"
        android:layout_marginEnd="@dimen/margin_star_end_element_shop_cart_vacio"
        android:layout_marginStart="@dimen/margin_star_end_element_shop_cart_vacio"
        android:layout_marginTop="@dimen/margin_top_imagen_shop_cart_vacio"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_shopping_cart_black" />

    <TextView
        android:id="@+id/lbl_yout_cart"
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_star_end_element_shop_cart_vacio"
        android:layout_marginStart="@dimen/margin_star_end_element_shop_cart_vacio"
        android:layout_marginTop="@dimen/margin_top_lbl_your_cart_shop_cart_vacio"
        android:text="@string/title_your_cart_empty"
        android:textAlignment="center"
        android:textColor="@color/textColorSecundary"
        android:textSize="@dimen/title_shop_cart_vacio"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_cart_vacio" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_star_end_element_shop_cart_vacio"
        android:text="@string/msg_cart_empty"
        android:textAlignment="center"
        android:textSize="@dimen/body_shop_cart_vacio"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_yout_cart" />

    <Button
        android:id="@+id/btn_comenzar_ahora"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_star_end_element_shop_cart_vacio"
        android:layout_marginStart="@dimen/margin_star_end_element_shop_cart_vacio"
        android:layout_marginTop="@dimen/margin_top_btn_comenzar_ahora_shop_cart_vacio"
        android:backgroundTint="@color/colorSecundary"
        android:text="@string/title_start_buy"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/text_size_button"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

</android.support.constraint.ConstraintLayout>