<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="co.com.neubs.shopneubs.ProductoDetalleActivity"
    tools:showIn="@layout/activity_producto_detalle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="643dp"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="8dp">

        <!--ImageView
            android:id="@+id/img_producto_detalle"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txt_nombre_producto_detalle" /-->

        <TextView
            android:id="@+id/lbl_nombre_producto_detalle"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:textSize="17sp"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:text="TextView" />

        <TextView
            android:id="@+id/title_descripcion"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/lbl_nombre_producto_detalle"
            android:layout_marginTop="44dp"
            android:layout_marginLeft="12dp"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:text="@string/title_description"
            android:layout_alignParentStart="true" />


        <TextView
            android:id="@+id/lbl_descripcion_producto_detalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/text_margin"
            android:text="TextView"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_below="@+id/title_descripcion"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_alignStart="@+id/title_descripcion" />


        <TextView
            android:id="@+id/title_codigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/title_descripcion"
            android:layout_below="@+id/lbl_nombre_producto_detalle"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"

            android:text="CÃ³digo:" />

        <TextView
            android:id="@+id/lbl_codigo_producto_detalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl_nombre_producto_detalle"
            android:layout_toEndOf="@+id/title_codigo"
            android:text="TextView" />

        <TextView
            android:id="@+id/title_marca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl_nombre_producto_detalle"
            android:layout_marginStart="77dp"
            android:layout_toEndOf="@+id/lbl_codigo_producto_detalle"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:text="Marca:" />

        <TextView
            android:id="@+id/lbl_marca_producto_detalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/title_marca"
            android:layout_marginStart="13dp"
            android:layout_toEndOf="@+id/title_marca"
            android:text="TextView" />

        <TextView
            android:id="@+id/title_precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:text="Precio:"
            android:layout_below="@+id/lbl_codigo_producto_detalle"
            android:layout_toEndOf="@+id/lbl_codigo_producto_detalle" />

        <TextView
            android:id="@+id/lbl_precio_producto_detalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/colorPrecio"
            android:layout_below="@+id/title_marca"
            android:layout_toStartOf="@+id/lbl_marca_producto_detalle" />

        <TextView
            android:id="@+id/title_especificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Especificaciones"
            android:layout_below="@+id/lbl_descripcion_producto_detalle"
            android:layout_alignStart="@+id/lbl_descripcion_producto_detalle"
            android:layout_alignEnd="@+id/lbl_descripcion_producto_detalle" />

        <TextView
            android:id="@+id/lbl_especificacion_producto_detalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/lbl_descripcion_producto_detalle"
            android:layout_alignStart="@+id/title_especificacion"
            android:layout_below="@+id/title_especificacion"
            android:text="TextView" />


    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>