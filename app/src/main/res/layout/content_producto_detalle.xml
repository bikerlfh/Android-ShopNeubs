<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="co.com.neubs.shopneubs.ProductoDetalleActivity"
    tools:showIn="@layout/activity_producto_detalle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="643dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="8dp">

        <!--ImageView
            android:id="@+id/img_producto_detalle"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txt_nombre_producto_detalle" /-->

        <TextView
            android:id="@+id/lbl_nombre_producto_detalle"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:textSize="17sp"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:text="TextView"
            android:layout_alignStart="@+id/title_codigo" />

        <TextView
            android:id="@+id/title_descripcion"
            android:layout_width="310dp"
            android:layout_height="25dp"
            android:background="@drawable/border"
            android:gravity="center_vertical"
            android:text="@string/title_description"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:layout_marginTop="27dp"
            android:layout_below="@+id/lbl_precio_producto_detalle"
            android:layout_alignParentStart="true" />


        <TextView
            android:id="@+id/title_codigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/lbl_precio_producto_detalle"
            android:layout_below="@+id/lbl_nombre_producto_detalle"
            android:layout_marginTop="7dp"
            android:text="CÃ³digo:"
            android:textSize="17sp"
            android:textColor="@color/colorPrimaryDark"
           />
        <TextView
            android:id="@+id/lbl_codigo_producto_detalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="17sp"
            android:layout_alignBaseline="@+id/title_codigo"
            android:layout_alignBottom="@+id/title_codigo"
            android:layout_toEndOf="@+id/title_codigo"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/title_marca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Marca:"
            android:layout_marginEnd="17dp"
            android:layout_alignBaseline="@+id/lbl_codigo_producto_detalle"
            android:layout_alignBottom="@+id/lbl_codigo_producto_detalle"
            android:layout_toStartOf="@+id/lbl_marca_producto_detalle" />

        <TextView
            android:id="@+id/lbl_marca_producto_detalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="17sp"
            android:layout_alignBaseline="@+id/title_marca"
            android:layout_alignBottom="@+id/title_marca"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/lbl_precio_producto_detalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="$ 1.000.000"
            android:textAlignment="center"
            android:textColor="@color/colorPrecio"
            android:textSize="27sp"
            android:layout_below="@+id/title_marca"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/title_descripcion" />

        <TextView
            android:id="@+id/lbl_descripcion_producto_detalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/title_descripcion"
            android:layout_below="@+id/title_descripcion"
            android:layout_marginTop="17dp"
            android:text="TextView"
            android:layout_alignEnd="@+id/title_descripcion" />

        <TextView
            android:id="@+id/title_especificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl_descripcion_producto_detalle"
            android:layout_marginTop="14dp"
            android:background="@drawable/border"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Especificaciones"
            android:layout_alignEnd="@+id/lbl_descripcion_producto_detalle"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/lbl_especificacion_producto_detalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/title_especificacion"
            android:layout_marginTop="19dp"
            android:text="TextView"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/button2"
            android:layout_width="190sp"
            android:layout_height="40sp"
            android:layout_below="@+id/lbl_especificacion_producto_detalle"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/ic_categoria_03"
            android:layout_marginTop="26dp"
            android:background="@drawable/borde_redondo"
            android:textColor="@color/colorWhite"
            android:text="Agregar al carrito"
            />
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>