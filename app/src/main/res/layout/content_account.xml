<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="3dp"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="co.com.neubs.shopneubs.AccountActivity"
    tools:showIn="@layout/activity_account">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="182dp"
        android:background="@android:color/white"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_account"
            android:layout_width="72dp"
            android:layout_height="96dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:layout_weight="1.40"
            android:background="@android:color/white"
            android:contentDescription="@string/title_activity_account"
            android:paddingTop="@dimen/padding_top_img_account_content_account"
            android:scaleType="fitCenter"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_user" />

        <TextView
            android:id="@+id/lbl_welcome_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/img_account"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/title_welcome"
            android:textColor="@android:color/black"
            android:textSize="@dimen/title_welcome_account"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_account" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <TextView
            android:id="@+id/lbl_action_pedidos"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/padding_start_end_lbl_action_content_account"
            android:paddingStart="@dimen/padding_start_end_lbl_action_content_account"
            android:text="@string/title_activity_orders"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/subtitle_action_account"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

        <TextView
            android:id="@+id/lbl_action_perfil"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/padding_start_end_lbl_action_content_account"
            android:paddingStart="@dimen/padding_start_end_lbl_action_content_account"
            android:text="@string/title_activity_edit_profile"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/subtitle_action_account"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl_action_pedidos" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/lbl_action_terminos"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="?attr/selectableItemBackground"
            android:elevation="0dp"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/padding_start_end_lbl_action_content_account"
            android:paddingStart="@dimen/padding_start_end_lbl_action_content_account"
            android:text="@string/title_terminos_condiciones"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/subtitle_action_account"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <TextView
            android:id="@+id/lbl_action_informacion_envio"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackground"
            android:elevation="0dp"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/padding_start_end_lbl_action_content_account"
            android:paddingStart="@dimen/padding_start_end_lbl_action_content_account"
            android:text="@string/title_informacion_envio"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/subtitle_action_account"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl_action_terminos" />

        <TextView
            android:id="@+id/lbl_action_garantias"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackground"
            android:elevation="0dp"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/padding_start_end_lbl_action_content_account"
            android:paddingStart="@dimen/padding_start_end_lbl_action_content_account"
            android:text="@string/title_garantia"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/subtitle_action_account"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl_action_informacion_envio" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorSecundary"
        android:text="@string/title_logout"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_end_start_elemento_final_content_account"
        android:layout_marginStart="@dimen/margin_end_start_elemento_final_content_account"
        android:layout_marginTop="@dimen/margin_top_img_logo_content_account"
        android:contentDescription="@string/app_name"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_logout"
        app:srcCompat="@drawable/logo_login_200x38" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="@dimen/margin_end_start_elemento_final_content_account"
        android:layout_marginStart="@dimen/margin_end_start_elemento_final_content_account"
        android:gravity="center_vertical|center"
        android:text="@string/title_derechos_reservados"
        android:textSize="@dimen/title_derechos_reservados_account"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_logo"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>
