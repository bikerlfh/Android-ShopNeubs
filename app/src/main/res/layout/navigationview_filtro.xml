<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.NavigationView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_filtro"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:layout_marginTop="23dp"
    android:fitsSystemWindows="true"
    app:elevation="16dp"
    app:itemBackground="@drawable/item_menu_selector"
    app:itemIconTint="@color/menu_text_color"
    app:itemTextColor="@color/menu_text_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:elevation="16dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorPrimary"
            android:gravity="fill_vertical"
            android:paddingStart="16dp"
            android:text="Filtro"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lbl_titulo_ordenar_por"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:layout_centerInParent="false"
            android:layout_marginTop="3dp"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:text="@string/title_order_by"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/colorSecundaryLight" />

        <LinearLayout
            android:id="@+id/ordenar_por"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/lbl_titulo_ordenar_por"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/container_filter_relevante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingStart="16dp"
                android:paddingTop="8dp">

                <ImageButton
                    android:id="@+id/btn_relevante"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lbl_titulo_ordenar_por"
                    android:layout_toStartOf="@+id/btn_menor_precio"
                    android:background="?android:attr/selectableItemBackground"
                    android:foregroundTint="@color/colorAccent"
                    app:srcCompat="@drawable/ic_important" />

                <TextView
                    android:id="@+id/lbl_relevante"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/ordenar_por"
                    android:layout_weight="1.21"
                    android:gravity="center_vertical"
                    android:paddingStart="32dp"
                    android:text="Relevante"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textIsSelectable="false" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_filter_menor_precio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingStart="16dp"
                android:paddingTop="8dp">

                <ImageButton
                    android:id="@+id/btn_menor_precio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/btn_mayor_precio"
                    android:background="?android:attr/selectableItemBackground"
                    app:srcCompat="@drawable/ic_price_tag" />

                <TextView
                    android:id="@+id/lbl_menor_precio"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/ordenar_por"
                    android:layout_toEndOf="@+id/lbl_relevante"
                    android:layout_weight="13778924"
                    android:gravity="center_vertical"
                    android:paddingStart="32dp"
                    android:text="Menor Precio"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_filter_mayor_precio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingStart="16dp"
                android:paddingTop="8dp">

                <ImageButton
                    android:id="@+id/btn_mayor_precio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lbl_titulo_ordenar_por"
                    android:layout_toStartOf="@+id/btn_oferta"
                    android:background="?android:attr/selectableItemBackground"
                    app:srcCompat="@drawable/ic_price_higher" />

                <TextView
                    android:id="@+id/lbl_mayor_precio"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/ordenar_por"
                    android:layout_toEndOf="@+id/lbl_menor_precio"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingStart="32dp"
                    android:text="Mayor Precio"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_filter_oferta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingStart="16dp"
                android:paddingTop="8dp">

                <ImageButton
                    android:id="@+id/btn_oferta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/btn_aplicar_filtro"
                    android:layout_below="@+id/lbl_titulo_ordenar_por"
                    android:background="?android:attr/selectableItemBackground"
                    app:srcCompat="@drawable/ic_offer" />

                <TextView
                    android:id="@+id/lbl_oferta"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingStart="32dp"
                    android:text="Ofertas"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/lbl_title_filtre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ordenar_por"
            android:layout_marginTop="3dp"
            android:background="@android:color/white"
            android:paddingBottom="8dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:text="Marcas"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/colorSecundaryLight" />

        <Button
            android:id="@+id/btn_aplicar_filtro"
            style="@style/Widget.AppCompat.ButtonBar.AlertDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:drawableTint="@android:color/transparent"
            android:text="APLICAR"
            android:textColor="@color/textColorPrimary"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignParentEnd="true" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_view_marca_filtro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/lbl_title_filtre"
            android:background="@android:color/white"
            android:paddingStart="16dp"
            android:paddingTop="2dp"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btn_limpiar_filtro"
            style="@style/Widget.AppCompat.ButtonBar.AlertDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_aplicar_filtro"
            android:layout_alignBottom="@+id/btn_aplicar_filtro"
            android:layout_toStartOf="@+id/btn_aplicar_filtro"
            android:backgroundTint="@android:color/transparent"
            android:text="LIMPIAR"
            android:textColor="@color/colorWhite" />

    </RelativeLayout>

</android.support.design.widget.NavigationView>