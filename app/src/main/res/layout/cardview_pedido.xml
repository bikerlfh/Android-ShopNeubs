<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_margin="@dimen/margin_card_view"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="2dp"
        android:background="@color/colorWhite"
        android:elevation="1dp"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_end_start_bottom_layout_cardview_pedido"
        android:paddingEnd="@dimen/padding_end_start_bottom_layout_cardview_pedido"
        android:paddingStart="@dimen/padding_end_start_bottom_layout_cardview_pedido"
        android:paddingTop="@dimen/padding_top_layout_cardview_pedido"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_start_title_pedido_cardview_pedido"
            android:text="@string/title_pedido"
            android:textAlignment="textStart"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/title_order_pedido" />

        <TextView
            android:id="@+id/lbl_numero_pedido"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:text="@string/text_view_empy"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/numero_pedido" />

        <TextView
            android:id="@+id/lbl_fecha_pedido_detalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_end_start_lbl_fecha_pedido_cardview_pedido"
            android:layout_marginStart="@dimen/margin_end_start_lbl_fecha_pedido_cardview_pedido"
            android:gravity="end"
            android:text="@string/text_view_empy"
            android:textSize="@dimen/fecha_pedido"
            app:layout_constraintHorizontal_bias="0.818"
            app:layout_constraintLeft_toRightOf="@+id/lbl_estado_pedido_detalle"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="16dp" />

    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/margin_top_constraintLayout_cardview_pedido"
        android:background="@color/colorWhite"
        android:paddingBottom="@dimen/padding_bottom_cardview_pedido"
        android:paddingEnd="@dimen/padding_end_start_cardview_pedido"
        android:paddingStart="@dimen/padding_end_start_cardview_pedido">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="47dp"
            android:layout_height="18dp"
            android:layout_marginEnd="@dimen/margin_end_start_top__title_estado_cardview_pedido"
            android:layout_marginStart="@dimen/margin_end_start_top__title_estado_cardview_pedido"
            android:layout_marginTop="@dimen/margin_end_start_top__title_estado_cardview_pedido"
            android:gravity="center"
            android:text="@string/title_estado"
            android:textAlignment="center"
            android:textSize="@dimen/title_estado_pedido"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lbl_estado_pedido_detalle"
            android:layout_width="94dp"
            android:layout_height="16dp"
            android:layout_marginEnd="@dimen/margin_end_start_top__title_estado_cardview_pedido"
            android:layout_marginStart="@dimen/margin_end_start_top__title_estado_cardview_pedido"
            android:text="@string/text_view_empy"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="@dimen/estado_pedido"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="57dp"
            android:layout_height="17dp"
            android:layout_marginStart="@dimen/margin_end_start_top__title_estado_cardview_pedido"
            android:layout_marginTop="@dimen/margin_end_start_top__title_estado_cardview_pedido"
            android:gravity="center"
            android:text="@string/title_num_products"
            android:textAlignment="center"
            android:textSize="@dimen/title_numero_producto_pedido"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lbl_numero_productos_pedido_detalle"
            android:layout_width="56dp"
            android:layout_height="16dp"
            android:layout_marginStart="@dimen/margin_end_start_top__title_estado_cardview_pedido"
            android:layout_marginTop="@dimen/margin_top_lbl_numeros_producto_cardview_pedido"
            android:text="@string/text_view_empy"
            android:textAlignment="center"
            android:textSize="@dimen/numero_producto_pedido"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/lbl_costo_total"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginBottom="@dimen/margin_bottom_start_lbl_costo_total_cardview_pedido"
            android:layout_marginEnd="@dimen/margin_end_lbl_costo_total_cardview_pedido"
            android:layout_marginStart="@dimen/margin_bottom_start_lbl_costo_total_cardview_pedido"
            android:layout_marginTop="@dimen/margin_top_lbl_costo_total_cardview_pedido"
            android:text="@string/text_view_empy"
            android:textAlignment="textEnd"
            android:textColor="@color/colorPrecio"
            android:textSize="@dimen/costo_total_pedido"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/lbl_estado_pedido_detalle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>