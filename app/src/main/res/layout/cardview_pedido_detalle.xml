<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        app:cardElevation="8dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="9dp">

            <TextView
                android:id="@+id/lbl_nombre_producto_pedido_detalle"
                android:layout_width="221dp"
                android:layout_height="52dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="24dp"
                android:text="TextView"
                android:textColor="@color/textColorSecundary"
                android:textSize="18sp"
                app:layout_constraintLeft_toRightOf="@+id/img_pedido_detalle"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.0" />

            <TextView
                android:id="@+id/lbl_cantidad_pedido_detalle"
                android:layout_width="0dp"
                android:layout_height="22dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="TextView"
                app:layout_constraintLeft_toRightOf="@+id/img_pedido_detalle"
                app:layout_constraintTop_toBottomOf="@+id/lbl_nombre_producto_pedido_detalle"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="0dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.0" />

            <TextView
                android:id="@+id/lbl_costo_total_pedido_detalle"
                android:layout_width="209dp"
                android:layout_height="0dp"
                android:layout_marginLeft="95dp"
                android:layout_marginStart="96dp"
                android:paddingLeft="16dp"
                android:text="Total:"
                android:textColor="@color/colorPrecio"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="0dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp" />

            <co.com.neubs.shopneubs.controls.ImageLoaderView
                android:id="@+id/img_pedido_detalle"
                android:layout_width="95dp"
                android:layout_height="99dp"
                android:paddingTop="16dp"
                android:scaleType="centerCrop"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="5dp" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>