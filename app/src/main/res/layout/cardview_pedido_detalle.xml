<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_card_view"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="5dp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_botton_cardview_pedido_detalle">

        <TextView
            android:id="@+id/lbl_nombre_producto_pedido_detalle"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingEnd="@dimen/padding_end_start_lbl_cardview_pedido_detalle"
            android:paddingStart="@dimen/padding_end_start_lbl_cardview_pedido_detalle"
            android:paddingTop="@dimen/padding_top_lbl_nombre_producto_cardview_pedido_detalle"
            android:text="TextView"
            android:textColor="@color/textColorSecundary"
            android:textSize="@dimen/title_producto_pedido_detalle"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/img_pedido_detalle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lbl_cantidad_pedido_detalle"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/padding_end_start_lbl_cardview_pedido_detalle"
            android:paddingStart="@dimen/padding_end_start_lbl_cardview_pedido_detalle"
            android:text="TextView"
            android:textSize="@dimen/cantidad_pedido_detalle"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/img_pedido_detalle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl_nombre_producto_pedido_detalle" />

        <TextView
            android:id="@+id/lbl_costo_total_pedido_detalle"
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_bottom_lbl_costo_total_cardview_pedido_detalle"
            android:layout_marginStart="@dimen/margin_start_lbl_costo_total_cardview_pedido_detalle"
            android:paddingStart="@dimen/padding_end_start_lbl_cardview_pedido_detalle"
            android:text="Total:"
            android:textColor="@color/colorPrecio"
            android:textSize="@dimen/costo_total_pedido_detalle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <co.com.neubs.shopneubs.controls.ImageLoaderView
            android:id="@+id/img_pedido_detalle"
            android:layout_width="95dp"
            android:layout_height="99dp"
            android:layout_marginTop="@dimen/margin_top_img_producto_cardview_pedido_detalle"
            android:paddingTop="@dimen/padding_top_img_producto_cardview_pedido_detalle"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>