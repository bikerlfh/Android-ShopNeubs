<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:padding="24dp"
        android:scaleType="center"
        app:srcCompat="@drawable/ic_action_view_as_grid" />

    <TextView
        android:id="@+id/lbl_titulo_categoria"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1.41"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:text="@string/text_view_empy"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <ImageView
        android:id="@+id/img_icon_expandible"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_weight="0.10"
        app:srcCompat="@drawable/ic_action_expand" />
</LinearLayout>