<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="1080"
    >
    <shape
        android:innerRadius="20dp"
        android:shape="ring"
        android:thickness="4dp"
        android:useLevel="false">
        <size
            android:height="48dp"
            android:width="48dp" />
        <gradient
            android:centerColor="@color/colorSecundary"
            android:startColor="@android:color/transparent"
            android:endColor="@color/colorSecundary"
            android:angle="0"
            android:centerY="0.5"
            android:type="sweep"
            android:useLevel="false"/>
    </shape>
</rotate>
